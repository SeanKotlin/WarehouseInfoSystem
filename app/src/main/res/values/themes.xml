<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WareHouseMxInfoSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_orange</item>
        <item name="colorPrimaryVariant">@color/color_cardGrey</item>
        <item name="colorOnPrimary">@color/color_textGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    Custom text header-->
    <style name="customTextHeader" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/maven_pro_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/color_orange</item>
    </style>
<!--    Custom Text-->
    <style name="customText" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/maven_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name= "android:textColor">@color/color_textGrey</item>
    </style>

    <style name="customText.bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    Cutsom Button Style-->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/customButtonShape</item>
        <item name="android:padding">10dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cardElevation">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="customButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="customOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>

</resources>